{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ],
  "buildCommand": "rm -rf node_modules .next .cache dist && npm install && npm run build",
  "cleanUrls": true,
  "trailingSlash": false,
  "public": true
} 